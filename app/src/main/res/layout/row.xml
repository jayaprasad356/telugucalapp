<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/calMonth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linerlayoutId">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/month_name"
                android:gravity="center"
                android:text="Month Name"
                android:textSize="25dp"
                android:layout_marginTop="-22dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addPlus"
                android:layout_alignRight="@+id/month_name"
                android:gravity="center"
                android:text="+"
                android:textSize="30dp"
                android:layout_marginTop="-12dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableId"
            android:background="@color/colorWhite">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/festivalList"
                android:text="festivalList"
                android:padding="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="18dp"
                android:autoSizeMaxTextSize="22dp"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginTop="-10dp"
                android:background="#e8f4f8"
                android:textColor="@color/calTextNum"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>