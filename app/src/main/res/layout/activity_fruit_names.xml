<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F0F4"
    tools:context=".activities.FruitNamesActivity">


    <LinearLayout
        android:id="@+id/llout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calHeaderT"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="పండ్లు"
            android:fontFamily="@font/sree"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18sdp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llout"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/corner_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="60dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:padding="@dimen/_10sdp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="తెలుగు పేర్లు"
                        android:gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/ramabhadra"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="సంస్కృతం పేర్లు"
                        android:gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/ramabhadra"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Telugu_rcView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />



        </LinearLayout>


    </FrameLayout>


</RelativeLayout>