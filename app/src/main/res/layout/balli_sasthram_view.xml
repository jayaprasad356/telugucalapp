<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_bg"
        android:backgroundTint="#F4F2F2"
        android:paddingVertical="5dp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="Title"
        android:fontFamily="@font/ramabhadra"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"
      />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/mallanna"
        android:textColor="@color/black"
        android:paddingHorizontal="20dp"
        android:textSize="@dimen/_16sdp"
        android:text="dkjlfakjl;asjkl;fajkl;afsjklafsjklafjklafjkla
        fjkladfsjkladfsjkladfsjkladfsjkladfsjklafsjklafsjkl;afsjklaf
        jkl;afsljk;afklj;afjkl;fajklasjkljklafsjkl;afkljafjklf
        adjklafkjladsfjklafjkladsfjkladfjkl;"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/corner_bg"
        android:backgroundTint="#F4F2F2"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:weightSum="2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/ramabhadra"
                android:gravity="center_horizontal"
                android:text="Female Body"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uses"
                android:textAlignment="center"
                android:fontFamily="@font/ramabhadra"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/corner_bg"
        android:backgroundTint="@color/colorHead"
        android:orientation="horizontal"
        android:weightSum="2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sub_description_1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="06:00 - 07.00"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner2_bg"
            android:backgroundTint="#F4F2F2"
            android:orientation="vertical"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/sub_description_2a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:fontFamily="@font/mallanna"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_description"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/corner_bg"
        android:backgroundTint="@color/colorHead"
        android:orientation="horizontal"
        android:weightSum="2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sub_description_1b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="06:00 - 07.00"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner2_bg"
            android:backgroundTint="#F4F2F2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_description_2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="Desc"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/mallanna"
                 />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>