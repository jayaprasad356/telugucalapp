<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SimpleInterestActivity"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/llout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHead"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Simple Interest"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />
    </LinearLayout>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorHead"
        >



    <Spinner
        android:id="@+id/SimpleInterestspinner"
        android:layout_height="@dimen/_40sdp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_20sdp"
        >


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Principal Amount"
            android:id="@+id/edAmount"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Interest Amount"
            android:id="@+id/edInterestAmount"
            android:textAlignment="center"
            android:inputType="number"/>


        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Annual Interest Rate (%)"
            android:id="@+id/edInterest"
            android:textAlignment="center"
            android:inputType="number"/>



    </LinearLayout>



    <LinearLayout
        android:id="@+id/llTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_20sdp"
        >




        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >

            <RadioButton
                android:id="@+id/rbYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Years"
                android:checked="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_20sdp"
                />


            <RadioButton
                android:id="@+id/rbMonth"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Months"
                />

        </RadioGroup>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Years"
            android:id="@+id/edYear"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Months"
            android:id="@+id/edMonth"
            android:textAlignment="center"
            android:inputType="number"/>


    </LinearLayout>

        <Button
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/btnCalculate"
            android:background="@color/colorHead"
            android:layout_marginTop="@dimen/_10sdp"
            />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:textSize="30dp"        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:textSize="20dp"        />









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Interest"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/black_stork"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simple Interest"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />
            <TextView
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="88"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Principle Amount"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />
            <TextView
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="88"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Annual Interest Rate"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />
            <TextView
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="88"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Years"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />
            <TextView
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="88"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/black_stork"
                />



        </LinearLayout>


    </LinearLayout>





</LinearLayout>