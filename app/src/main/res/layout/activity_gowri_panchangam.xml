<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GowriPanchangamActivity"
    android:background="#EDE9E9"
    android:id="@+id/slider"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHead"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
                android:backgroundTint="@color/black"
                />
            <TextView
                android:id="@+id/tvHoroscopeTitle"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gowri Panchangam"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/corner_bg"
            android:backgroundTint="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <ImageButton
                android:id="@+id/ibPreviousYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/ic_baseline_arrow_left_24" />

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibNextYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/ic_baseline_arrow_right_24" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_bg"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginHorizontal="@dimen/_10sdp"

            >



            <HorizontalScrollView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:padding="@dimen/_5sdp"
                >







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    >


                    <TextView
                        android:id="@+id/tvMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="సోమ"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/tvTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="మంగళ"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_10sdp"

                        />
                    <TextView
                        android:id="@+id/tvWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="బుధ"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_10sdp"

                        />
                    <TextView
                        android:id="@+id/tvThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="గురు"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_10sdp"

                        />
                    <TextView
                        android:id="@+id/tvFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="శుక్ర"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_10sdp"

                        />
                    <TextView
                        android:id="@+id/tvSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="శనివారము"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_10sdp"

                        />
                    <TextView
                        android:id="@+id/tvSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ఆది"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_10sdp"

                        />





                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            tools:listitem="@layout/gowri_tab_layout" />

    </LinearLayout>



</RelativeLayout>