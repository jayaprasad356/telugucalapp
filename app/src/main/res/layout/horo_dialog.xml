<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:elevation="0dp"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/headerHoro"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="#e8f4f8">

        <ImageView
            android:id="@+id/horoscopeImg"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:background="@drawable/mesha"/>

        <TextView
            android:id="@+id/horoscopeTxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="-7dp"
            android:layout_toRightOf="@+id/horoscopeImg"
            android:gravity="center"
            android:text="July_MeshaRasi"
            android:textColor="@color/calTextNum"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/horoscopeTxt"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:background="@drawable/close"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/rasiScroll"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/rasipalText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/calScrolltext"
            android:textSize="20dp"
            android:text="sampledata" />

    </ScrollView>


</com.google.android.material.card.MaterialCardView>