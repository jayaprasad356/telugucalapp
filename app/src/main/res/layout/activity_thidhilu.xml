<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThidhiluActivity"
    android:background="#EDE9E9"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/calHeaderT"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
            <TextView
                android:id="@+id/tvHoroscopeTitle"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thidhilu"
                android:fontFamily="@font/sree"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_18sdp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/corner_bg"
            android:backgroundTint="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <ImageButton
                android:id="@+id/ibPreviousYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/ic_baseline_arrow_left_24" />

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibNextYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/ic_baseline_arrow_right_24" />


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:scrollbars="none"
            android:background="@drawable/corner_bg"
            android:backgroundTint="@color/colorWhite"


            >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            >



            <TextView
                android:id="@+id/tvJanuary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvFebruary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvMarch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvApril"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvMay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvJune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvJuly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvAugust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvSeptember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="September"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvOctober"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvNovember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/tvDecember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_10sdp"

                />


        </LinearLayout>

        </HorizontalScrollView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            tools:listitem="@layout/thidhilu_tab_layout" />

    </LinearLayout>

</RelativeLayout>