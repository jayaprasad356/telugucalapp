<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
            <stroke android:width="1dp" android:color="#f4aa23"/>
            <corners android:radius="@dimen/_5sdp"/>
        </shape>
    </item>
    <item android:gravity="right|center_vertical|center_horizontal|center" android:right="8dp">
        <layer-list>
            <item>
                <bitmap android:gravity="right|center_vertical|center_horizontal|center" android:src="@android:drawable/arrow_down_float"/>
            </item>
        </layer-list>
    </item>
</layer-list>
